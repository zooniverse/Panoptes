apiVersion: v1
data:
  nginx.conf: |+
    upstream docker-panoptes {
      server localhost:81;
    }

    server {
      server_name panoptes-staging.zooniverse.org;
      include /etc/nginx/ssl.default.conf;
      gzip_types *;

      proxy_buffer_size 8k;
      proxy_set_header Host $http_host;
      proxy_set_header X-Real-IP $remote_addr;

      location = /commit_id.txt {
        root /static-assets/;
        expires off;
        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, HEAD';
        add_header 'Access-Control-Allow-Credentials' 'true';
      }

      location ~ ^/api-assets/ {
        root /static-assets/;
        gzip_static on; # to serve pre-gzipped version
        expires max;
        add_header Cache-Control public;
      }

      location = /favicon.ico {
        root /static-assets/;
        expires max;
        add_header Cache-Control public;
      }

      location = /robots.txt {
        root /static-assets/;
        expires max;
        add_header Cache-Control public;
      }

      location /health_check {
        proxy_set_header X-Forwarded-Proto https;
        proxy_pass http://docker-panoptes;
      }

      location / {
        # avoid attacker setting the host value for links in rails_app
        # https://github.com/rails/rails/issues/29893
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_pass http://docker-panoptes;
      }
    }
kind: ConfigMap
metadata:
  name: panoptes-nginx-conf-staging
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: panoptes-staging-app
  labels:
    app: panoptes-staging-app
spec:
  selector:
    matchLabels:
      app: panoptes-staging-app
  template:
    metadata:
      labels:
        app: panoptes-staging-app
    spec:
      volumes:
        - name: jwt-staging
          secret:
            secretName: panoptes-doorkeeper-jwt-staging
      containers:
        - name: panoptes-staging-app
          image: zooniverse/panoptes:__IMAGE_TAG__
          volumeMounts:
            - name: jwt-staging
              mountPath: "/rails_app/config/keys"
          resources:
            requests:
              memory: "700Mi"
              cpu: "50m"
            limits:
              memory: "700Mi"
              cpu: "1000m"
          livenessProbe:
            httpGet:
              path: /
              port: 81
              httpHeaders:
                 - name: X-Forwarded-Proto
                   value: https
          env:
            - name: RAILS_ENV
              value: staging
            - name: SECRET_KEY_BASE
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: SECRET_KEY_BASE
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: DATABASE_URL
            - name: ZOO_STREAM_KINESIS_STREAM_NAME
              value: zooniverse-staging
            - name: ZOO_STREAM_SOURCE
              value: panoptes
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: AWS_ACCESS_KEY_ID
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: AWS_SECRET_ACCESS_KEY
            - name: DUMP_CONGESTION_OPTS_INTERVAL
              value: "60"
            - name: DUMP_CONGESTION_OPTS_MIN_DELAY
              value: "60"
            - name: CORS_ORIGINS_REGEX
              value: /^https?:\/\/(127\.0\.0\.1|localhost|[a-z0-9-]+\.local|10\.[0-9]+\.[0-9]+\.[0-9]+|192\.168\.[0-9]+\.[0-9]+|[a-z0-9-]+\.zooniverse\.org|[a-z0-9-]+\.(pfe-)?preview\.zooniverse\.org)(:\d+)?$/
            - name: DESIGNATOR_API_HOST
              value: https://designator-staging.zooniverse.org/
            - name: DESIGNATOR_API_USERNAME
              value: staging
            - name: DESIGNATOR_API_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: DESIGNATOR_API_PASSWORD
            - name: EMAIL_EXPORT_S3_BUCKET
              value: zooniverse-exports
            - name: EVENTS_API_USERNAME
              value: staging_api
            - name: EVENTS_API_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: EVENTS_API_PASSWORD
            - name: REDIRECTS_BASE
              value: https://master.pfe-preview.zooniverse.org
            - name: REDIRECTS_PASSWORD_RESET
              value: /#/reset-password
            - name: REDIRECTS_UNSUBSCRIBE
              value: /#/unsubscribe
            - name: HONEYBADGER_API_KEY
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: HONEYBADGER_API_KEY
            - name: MAILER_ADDRESS
              value: email-smtp.us-east-1.amazonaws.com
            - name: MAILER_DOMAIN
              value: zooniverse.org
            - name: MAILER_USER_NAME
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: MAILER_USER_NAME
            - name: MAILER_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: MAILER_PASSWORD
            - name: NEW_RELIC_APP_NAME
              value: Panoptes Staging
            - name: NEW_RELIC_LOG_LEVEL
              value: info
            - name: NEW_RELIC_MONITOR_MODE
              value: 'true'
            - name: NEW_RELIC_LICENSE_KEY
              valueFrom:
                secretKeyRef:
                  name: panoptes-common-env-vars
                  key: NEW_RELIC_LICENSE_KEY
            - name: PAGE_SIZE_LIMIT
              value: '100'
            - name: SIDEKIQ_VERBOSE
              value: 'false'
            - name: SIDEKIQ_LOGFILE
              value: ./log/sidekiq.log
            - name: SIDEKIQ_PIDFILE
              value: ./tmp/pids/sidekiq.pid
            - name: SIDEKIQ_CONCURRENCY
              value: '4'
            - name: SIDEKIQ_TIMEOUT
              value: '30'
            - name: STORAGE_ADAPTER
              value: aws
            - name: STORAGE_BUCKET
              value: zooniverse-static
            - name: STORAGE_PREFIX
              value: panoptes-uploads.zooniverse.org/staging/
            - name: SOCIAL_FACEBOOK_APP_ID
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: SOCIAL_FACEBOOK_APP_ID
            - name: SOCIAL_FACEBOOK_APP_SECRET
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: SOCIAL_FACEBOOK_APP_SECRET
            - name: SOCIAL_GOOGLE_APP_ID
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: SOCIAL_GOOGLE_APP_ID
            - name: SOCIAL_GOOGLE_APP_SECRET
              valueFrom:
                secretKeyRef:
                  name: panoptes-staging-env-vars
                  key: SOCIAL_GOOGLE_APP_SECRET
            - name: TALK_API_HOST
              value: https://talk-staging.zooniverse.org
            - name: TALK_API_USER
              value: '1'
            - name: TALK_API_APPLICATION
              value: '1'
            - name: USER_SUBJECT_LIMIT
              value: '100'
          volumeMounts:
            - name: static-assets
              mountPath: "/static-assets"
          lifecycle:
            postStart:
              exec:
                command: ["/bin/bash", "-c", "cp -R /rails_app/public/* /static-assets"]
        - name: panoptes-staging-nginx
          image: zooniverse/apps-nginx:xenial
          resources:
            requests:
              memory: "100Mi"
              cpu: "10m"
            limits:
              memory: "100Mi"
              cpu: "500m"
          livenessProbe:
            httpGet:
              path: /
              port: 80
              httpHeaders:
                 - name: X-Forwarded-Proto
                   value: https
            initialDelaySeconds: 10
          ports:
            - containerPort: 80
          volumeMounts:
            - name: static-assets
              mountPath: "/static-assets"
            - name: panoptes-nginx-config
              mountPath: "/etc/nginx-sites"
      volumes:
        - name: static-assets
          emptyDir: {}
        - name: panoptes-nginx-config
          configMap:
            name: panoptes-nginx-conf-staging
---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: panoptes-staging-app
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: panoptes-staging-app
  minReplicas: 1
  maxReplicas: 2
  targetCPUUtilizationPercentage: 80
---
apiVersion: v1
kind: Service
metadata:
  name: panoptes-staging-app
spec:
  selector:
    app: panoptes-staging-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort
