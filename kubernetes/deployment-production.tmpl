        - name: jwt-production
          secret:
            secretName: panoptes-doorkeeper-jwt-production
---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: panoptes-production-sidekiq
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: panoptes-production-sidekiq
  minReplicas: 2
  maxReplicas: 6
  targetCPUUtilizationPercentage: 95
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: panoptes-production-redis
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: azurefile
  resources:
    requests:
      storage: 5Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: panoptes-production-redis
  labels:
    app: panoptes-production-redis
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: panoptes-production-redis
  template:
    metadata:
      labels:
        app: panoptes-production-redis
    spec:
      initContainers:
        - name: disable-thp
          image: busybox
          volumeMounts:
            - name: host-sys
              mountPath: /host-sys
          command: ["sh", "-c", "echo never >/host-sys/kernel/mm/transparent_hugepage/enabled"]
      containers:
        - name: panoptes-production-redis
          image: redis:6.0.5
          args: ['--appendonly yes', '--appendfsync no']
          resources:
            requests:
              memory: "2500Mi"
              cpu: "500m"
            limits:
              memory: "2500Mi"
              cpu: "1500m"
          volumeMounts:
          - name: panoptes-production-redis-data
            mountPath: "/data"
      volumes:
        - name: panoptes-production-redis-data
          persistentVolumeClaim:
            claimName: panoptes-production-redis
        - name: host-sys
          hostPath:
            path: /sys

---
apiVersion: v1
kind: Service
metadata:
  name: panoptes-production-redis
spec:
  selector:
    app: panoptes-production-redis
  ports:
    - protocol: TCP
      port: 6379
      targetPort: 6379
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: panoptes-production-memcached
  labels:
    app: panoptes-production-memcached
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: panoptes-production-memcached
  template:
    metadata:
      labels:
        app: panoptes-production-memcached
    spec:
      containers:
        - name: panoptes-production-memcached
          image: memcached:1.6.6
          args: ['-m 90']
          resources:
            requests:
              memory: "100Mi"
              cpu: "10m"
            limits:
              memory: "100Mi"
              cpu: "500m"
---
apiVersion: v1
kind: Service
metadata:
  name: panoptes-production-memcached
spec:
  selector:
    app: panoptes-production-memcached
  ports:
    - protocol: TCP
      port: 11211
      targetPort: 11211
  type: NodePort
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: panoptes-production-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    certmanager.k8s.io/cluster-issuer: letsencrypt-prod
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    nginx.ingress.kubernetes.io/proxy-buffer-size: "128k"
    nginx.ingress.kubernetes.io/set-real-ip-from: "10.0.0.0/8"
spec:
  tls:
  - hosts:
    - panoptes.azure.zooniverse.org
    secretName: panoptes-production-tls-secret
  rules:
  - host: panoptes.azure.zooniverse.org
    http:
      paths:
      - backend:
          serviceName: panoptes-production-app
          servicePort: 80
        path: /(.*)