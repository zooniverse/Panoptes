default: &default
  adapter: postgresql
  encoding: unicode
  user: panoptes
  password: panoptes
  host: localhost
  pool: 5
  port: 5432
  prepared_statements: false

development:
  <<: *default
  database: Panoptes_development

test:
  adapter: postgresql
  database: travis_ci_test
  username: postgres
  prepared_statements: false

docker_dev:
  <<: *default
  host: <%= ENV['DB_PORT_5432_TCP_ADDR'] %>
  port: <%= ENV['DB_PORT_5432_TCP_PORT'] %>
  database: Panoptes_development

